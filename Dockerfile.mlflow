FROM ghcr.io/mlflow/mlflow:v2.14.1
WORKDIR /mlflow

# Default artifact & DB locations inside a single volume
# (compose mounts a named volume here so experiments/models persist)
EXPOSE 5000
CMD ["mlflow", "server", "--host", "0.0.0.0", "--port", "5000", "--backend-store-uri", "sqlite:////mlflow/mlflow.db", "--default-artifact-root", "/mlflow/artifacts"]
